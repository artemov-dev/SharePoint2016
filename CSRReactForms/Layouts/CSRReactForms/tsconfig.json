{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "./public/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "include": [
    "./src/**/**/*"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": false
  }
}